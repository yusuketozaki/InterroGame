# 本番環境用の環境変数
# このファイルをコピーして .env として使用してください

# フロントエンド設定
VITE_API_BASE_URL=

# バックエンド設定
OLLAMA_HOST=0.0.0.0:11434
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# Docker設定
COMPOSE_PROJECT_NAME=interrogame

# Docker単体版の設定
NETWORK_NAME=interrogame-network
BACKEND_CONTAINER=interrogame-backend
FRONTEND_CONTAINER=interrogame-frontend
VOLUME_NAME=interrogame-ollama-data

# GPU設定（NVIDIAランタイムが利用可能な場合）
NVIDIA_VISIBLE_DEVICES=all
