# Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# package.jsonとpackage-lock.jsonをコピー
COPY frontend/package*.json ./

# 依存関係をインストール
RUN npm ci --only=production

# ソースコードをコピー
COPY frontend/ .

# ビルド
RUN npm run build

# 本番用サーバーを使用
FROM nginx:alpine
COPY --from=0 /app/dist /usr/share/nginx/html

# nginx設定をコピー
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
